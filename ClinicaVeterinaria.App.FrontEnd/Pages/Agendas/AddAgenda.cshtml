@page
@model ClinicaVeterinaria.App.FrontEnd.addAgendaModel
@using ClinicaVeterinaria.App.Dominio
@{
}
<h1>Crear Agenda</h1>
<p>En esta pagína podrás agendar una cita Previa</p>
<span class="text-danger">@Model.mensaje</span>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="MascotaIdMascota" class="form-control">Mascota</label>
        <select class="form-control" asp-for="MascotaIdMascota" asp-items="@Model.Mascota"></select>
    </div>
    <div class="form-group row">
        <label asp-for="CedulaVeterinario" class="form-control">Veterinario</label>
        <select class="form-control" asp-for="CedulaVeterinario" asp-items="@Model.Veterinario"></select>
    </div>
    <div class="form-group row">
        <label asp-for="agenda.Dia" class="col-sm-2">Día</label>
        <input asp-for="agenda.Dia" class="form-control">
        <span asp-validation-for="agenda.Dia" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="agenda.Hora" class="col-sm-2">Hora</label>
        <input asp-for="agenda.Hora" class="form-control">
        <span asp-validation-for="agenda.Hora" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="agenda.Descripcion">Descripción</label>
        
        <textarea asp-for="agenda.Descripcion" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-page="./ListAgendas" class="btn btn-primary">Cancelar</a>
</form>