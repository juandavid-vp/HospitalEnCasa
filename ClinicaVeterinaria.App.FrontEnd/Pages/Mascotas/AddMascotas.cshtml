<h2 style="color:green">AGREGAR TUS MASCOTAS</h2>
<form method="post" class="mt-3"> 

    <div class="form-group row">
        <label asp-for="mascota.NombreM" class="col-sm-2">Nombre de tu mascota</label>
        <input asp-for="mascota.NombreM" class="form-control">
        <span asp-validation-for="mascota.NombreM" class="text-danger"></span>
    </div>   
    <div class="form-group row">
        <label asp-for="mascota.Nacimiento" class="col-sm-2">Nacimiento</label>
        <input asp-for="mascota.Nacimiento" class="form-control">
        <span asp-validation-for="mascota.Nacimiento" class="text-danger"></span>
    </div>  
    <div class="form-group row">
        <label asp-for="mascota.Peso" class="col-sm-2">Peso</label>
        <input asp-for="mascota.Peso" class="form-control" >
        <span asp-validation-for="mascota.Peso" class="text-danger"></span>
    </div>  
    <div class="form-group row">
        <label asp-for="mascota.Raza" class="col-sm-2">Raza</label>
        <input asp-for="mascota.Raza" class="form-control" >
        <span asp-validation-for="mascota.Raza" class="text-danger"></span>
    </div>  
    <div class="form-group row">
        <label asp-for="mascota.Color" class="col-sm-2">Color</label>
        <input asp-for="mascota.Color" class="form-control" >
        <span asp-validation-for="mascota.Color" class="text-danger"></span>
    </div> 
   
    <div class="form-group row">
        <label asp-for="mascota.Descripción" class="col-sm-2">Descripción</label>
        <input asp-for="mascota.Descripción" class="form-control" >   
        <span asp-validation-for="mascota.Descripción" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-page="./ListMascotas" class="btn btn-primary">Cancelar</a>
    </div>

